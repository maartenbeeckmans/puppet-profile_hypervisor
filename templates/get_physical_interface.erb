<% ifaces=Array.new
@iface_array.each do |x|
  # Filter out unpredictable and predictable interfaces
  # Works with eth0, enp0, eno0, enp0s31f6
  if x.match(/e[nt][hops]\d+s?\d*f?\d*/) then
    ifaces << x.match(/e[nt][hops]\d+s?\d*f?\d*/)
  end
end
# Remove non unique values (duplicates possible when vlan interfaces are present)
ifaces.uniq -%>
<%= ifaces[0] -%>
